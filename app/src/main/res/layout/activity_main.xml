<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin=".2dp"
        android:layout_weight=".2"
        android:background="#fff"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_upper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:gravity="end|center"
            android:textAlignment="gravity"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text_view_lower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:autoSizeTextType="uniform"
            android:textColor="#000"
            android:gravity="end|center"
            android:textAlignment="gravity" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:background="#939393"
        android:columnCount="4"
        android:rowCount="5"
        >

        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="Reset"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="25sp" />
        <Button
            android:id="@+id/delButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="Del."
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="25sp" />
        <Button
            android:id="@+id/resultButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="Result"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="25sp" />
        <Button
            android:id="@+id/perButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="%"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="25sp" />
        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="7"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="8"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="9"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_div"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#F5F1EEEE"
            android:onClick="divFun"
            android:text="/"

            android:textAlignment="center"
            android:textColor="#FF9617"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="4"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="5"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="6"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_mul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#F5F1EEEE"
            android:onClick="mulFun"
            android:text="*"
            android:textAlignment="center"
            android:textColor="#FF9617"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="2"

            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="3"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_sub"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#F5F1EEEE"
            android:onClick="subFun"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#FF9617"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="1"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_equal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#FF9617"
            android:backgroundTint="#FF9617"
            android:onClick="equalFun"
            android:text="="
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_dot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="."
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#fff"
            android:onClick="clickAction"
            android:text="0"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin=".2dp"
            android:background="#F5F1EEEE"
            android:onClick="addFun"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#FF9617"
            android:textSize="30sp" />
    </GridLayout>

</LinearLayout>